@model IEnumerable<MVCBlog.Models.Blog>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>Blog Posts</h1>
                    <h2 class="subheading">Check out all the available posts!</h2>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                @foreach (var blog in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.ActionLink(@blog.Title, "Read", "Blog", new { id = blog.Id }, null)</h3>
                            <h4 class="panel-info">Created: @blog.Timestamp</h4>
                        </div>
                        <div class="panel-body">@blog.TeaserText</div>
                        <div class="panel-footer">Author: @blog.Author</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>